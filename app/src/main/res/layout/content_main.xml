    <LinearLayout android:id="@+id/gameTitle" android:layout_width="300dip" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="10dip">
        <TextView android:id="@+id/title"
            android:background="@drawable/title"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_margin="5dip"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="22dip"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dip"
        android:background="@drawable/score_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtvwGameLevel"
            android:layout_weight="0.42"
            android:layout_marginLeft="20dip"
            android:textSize="16sp"
            android:textColor="#dc612c"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/ButtonsRow1" android:layout_width="250dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="5dip"
                   android:layout_gravity="center_horizontal">    <!-- android:layout_marginLeft="50dip" android:layout_marginRight="20dip"-->
        <ImageButton android:id="@+id/b1"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="1"/>
        <ImageButton android:id="@+id/b2"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="2"/>
        <ImageButton android:id="@+id/b3"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="3" />
    </LinearLayout>

    <LinearLayout android:id="@+id/ButtonsRow2" android:layout_width="250dp" android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <ImageButton android:id="@+id/b4"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="4"/>
        <ImageButton android:id="@+id/b5"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="5"/>
        <ImageButton android:id="@+id/b6"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="6" />
    </LinearLayout>

    <LinearLayout android:id="@+id/ButtonsRow3" android:layout_width="250dp" android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <ImageButton android:id="@+id/b7"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="7"/>
        <ImageButton android:id="@+id/b8"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="8"/>
        <ImageButton android:id="@+id/b9"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dip"
            android:src="@drawable/default_button"
            android:tag="9" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="30dip"
        android:background="@drawable/score_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtvwUserWinNumber"
            android:layout_weight="0.42"
            android:layout_marginLeft="20dip"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="5dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtvwCompWinNumber"
            android:layout_weight="0.43"
            android:layout_marginLeft="10dip"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="5dip" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom|center_vertical"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="80dip">

        <ImageButton
            android:layout_width="175dip"
            android:layout_height="35dip"
            android:layout_marginBottom="10dip"
            android:id="@+id/btnStartNewGame"
            android:src="@drawable/startgame"/>
    </LinearLayout>
</LinearLayout>

